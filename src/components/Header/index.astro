---
import Title from './Title.svelte'
import LanguageToggle from './LanguageToggle.svelte'
import ThemeToggle from './ThemeToggle.svelte'
import Navigation from './Navigation.svelte'
import CurrentPageTitle from './CurrentPageTitle.svelte'
import Avatar from './Avatar.astro'

---

<header class="header">
    <div class="header-top">
        <div class="container">
            <div class="title-wrap">
                <Title client:load />
            </div>
            <LanguageToggle client:load />
            <ThemeToggle client:load />
        </div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="header-bottom-container-left">
                <Avatar />
                <CurrentPageTitle client:load />
            </div>
            <Navigation client:load />
        </div>
    </div>
</header>

<style>
    .header {
        display: flex;
        flex-direction: column;
    }
    .container {
        width: 100%;
        max-width: 1200px;
        display: flex;
        flex-wrap: nowrap;
        justify-content: flex-end;
        align-items: center;
    }
    .header-top, .header-bottom {
        padding: 0 50px;
        display: flex;
        justify-content: center;
    }
    .header-top {
        height: 74px;
    }
    .header-bottom {
        background-color: #F5F7FD;
        height: 140px;
    }
    :global(#app.dark .header-bottom) {
        transition: background-color .25s ease;
        background-color: #15161B;
    }
    .title-wrap, .header-bottom-container-left {
        margin-right: auto;
    }
    .header-bottom-container-left {
        display: flex;
    }
</style>
