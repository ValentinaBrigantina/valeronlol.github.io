---
import AvatarSrc from '$public/assets/avatar.png'
---

<img
    src={AvatarSrc}
    alt="avatar"
    class="avatar"
>

<style>
    .avatar {
        width: 128px;
        height: 128px;
        border-radius: 50%;
        background-color: #fff;
        transition: background-color .25s ease;
    }
    :global(#app.dark .avatar) {
        background-color: #F5F7FD;
    }
</style>