---
import '/style/global.css'
import Header from '$comp/Header/index.astro'
import Footer from '$comp/Footer/index.astro'
import { mainTitle } from '$const'
import ThemeProvider from '../components/hoc/ThemeProvider.svelte'
---

<html>
  <head>
    <title>{mainTitle}</title>
    <meta name='viewport' content='width=device-width, initial-scale=1' />
  </head>
  <body>
    <div id="app">
      <ThemeProvider client:load />
      <Header/>
      <div class="content">
        <div class="wrapper">
          <slot />
        </div>
      </div>
      <Footer/>
    </div>
  </body>
</html>

<style>
  #app, body {
    min-height: 100vh;
  }
  #app {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  #app.dark {
    color-scheme: dark;
  }
  .content {
    display: flex;
    justify-content: center;
    flex-grow: 1;
  }
  .wrapper {
    display: flex;
    flex-direction: column;
    max-width: 1200px;
    padding: 70px 180px 50px;
    width: 100%;
    position: relative;
  }

  @media screen and (max-width: 1024px) {
   .wrapper {
      padding: 70px 90px 50px;
    }
  }

  @media screen and (max-width: 760px) {
   .wrapper {
      padding: 70px 30px 50px;
    }
  }

  @media screen and (max-width: 680px) {
   .wrapper {
      padding: 120px 30px 50px;
    }
  }

  @media screen and (max-width: 420px) {
   .wrapper {
      padding: 120px 10px 50px;
    }
  }
</style>
